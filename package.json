{
  "name": "@your-org/network-viz-library",
  "version": "1.0.0",
  "description": "Advanced Network Visualization Component Library for Angular",
  "keywords": ["angular", "network", "visualization", "d3", "graph", "components"],
  "homepage": "https://your-org.github.io/network-viz-library",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/network-viz-library.git"
  },
  "license": "MIT",
  "author": "Your Organization",
  "scripts": {
    "ng": "ng",
    "start": "ng serve demo-app",
    "build": "ng build network-viz-lib",
    "build:demo": "ng build demo-app",
    "build:all": "npm run build && npm run build:demo",
    "watch": "ng build network-viz-lib --watch --configuration development",
    "test": "ng test",
    "test:lib": "ng test network-viz-lib",
    "test:coverage": "ng test network-viz-lib --code-coverage",
    "test:watch": "ng test network-viz-lib --watch",
    "test:headless": "ng test network-viz-lib --watch=false --browsers=ChromeHeadless",
    "e2e": "cypress open",
    "e2e:headless": "cypress run",
    "lint": "ng lint",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "deploy-storybook": "storybook build && gh-pages -d storybook-static",
    "docs:generate": "compodoc -p projects/network-viz-lib/tsconfig.lib.json -d docs/api --theme material",
    "docs:serve": "compodoc -p projects/network-viz-lib/tsconfig.lib.json -s -d docs/api",
    "release": "npm run build && npm publish dist/network-viz-lib",
    "pack": "npm run build && cd dist/network-viz-lib && npm pack",
    "benchmark": "ng run demo-app:serve --configuration=benchmark"
  },
  "peerDependencies": {
    "@angular/common": "^19.2.15",
    "@angular/core": "^19.2.15",
    "@angular/platform-browser": "^19.2.15",
    "d3": "^7.8.5",
    "rxjs": "^7.8.0"
  },
  "dependencies": {
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "d3": "^7.8.5",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.15",
    "@angular/cli": "^19.2.15",
    "@angular/compiler-cli": "^19.2.0",
    "@angular/testing": "^0.0.0-0",
    "@compodoc/compodoc": "^1.1.26",
    "@storybook/addon-a11y": "^9.0.13",
    "@storybook/addon-controls": "^9.0.8",
    "@storybook/addon-docs": "^9.0.13",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-storysource": "^8.6.14",
    "@storybook/addon-viewport": "^9.0.8",
    "@storybook/angular": "^9.0.13",
    "@types/d3": "^7.4.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "cypress": "^14.5.0",
    "d3": "^7.8.5",
    "gh-pages": "^6.0.0",
    "jasmine": "^5.8.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^20.0.1",
    "rxjs": "~7.8.0",
    "storybook": "^8.0.0",
    "typescript": "~5.6.0",
    "zone.js": "~0.15.0"
  }
}
